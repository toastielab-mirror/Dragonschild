---
import type { SocialLinks } from "@/types";

import {
  FaDiscord,
  FaEnvelope,
  FaGitAlt,
  FaServer,
  FaGlobe,
  FaYoutube,
  FaRobot,
} from "react-icons/fa";

import { PiFediverseLogoBold } from "react-icons/pi";

interface Props {
  links: SocialLinks;
}

const { links } = Astro.props;

const liClass = "inline-block px-1 intersect:animate-fade opacity-0";
const iconClass =
  "glass-t rounded text-txt-p dark:text-darkmode-txt-p flex h-9 w-9 items-center justify-center text-center";
---

<ul class="py-2 flex items-center">
  {
    links.discord && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="Discord"
          href={links.discord}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Discord</span>
          <FaDiscord className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.email && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="Email"
          href={`mailto:${links.email}`}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Email</span>
          <FaEnvelope className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.valkyriecoms && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="Valkyriecoms"
          href={links.valkyriecoms}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Valkyriecoms</span>
          <PiFediverseLogoBold className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.toastielab && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="GitHub"
          href={links.toastielab}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Toastielab</span>
          <FaGitAlt className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.elliebot && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="EllieBot project"
          href={links.elliebot}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">EllieBot</span>
          <FaRobot className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.dchosting && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="Dragon's child hosting"
          href={links.dchosting}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Dragon's child hosting</span>
          <FaServer className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.website && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="Website"
          href={links.website}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">Website</span>
          <FaGlobe className="w-6 h-6" />
        </a>
      </li>
    )
  }
  {
    links.youtube && (
      <li class={liClass}>
        <a
          class={iconClass}
          aria-label="YouTube"
          href={links.youtube}
          target="_blank"
          rel="noopener noreferrer nofollow"
        >
          <span class="sr-only">YouTube</span>
          <FaYoutube className="w-6 h-6" />
        </a>
      </li>
    )
  }
</ul>
